<%= render "live_nav" %>

<% if params[:query].nil? %>
	<h2>目前報名人數：<%= @lives.count %></h2>
<% end %>

<%= form_tag(admin_live_view_path, :method => "GET") do %>
	<%= label_tag :query, "找講者？" %>
  <%= text_field_tag :query %>

  <%= submit_tag("Search") %>
<% end %>

<table class="table table-hover">
	<thead>
		<tr>
				<th>名字</th>
				<th>gmail</th>
				<th>學校</th>
				<th>科系</th>
				<th>直播地點</th>
				<th>IOH 連結</th>
				<th>時間數量</th>
				<th>Edit</th>
		</tr>
	</thead>
	<tbody>
		<% @lives.each do |live| %>
			<tr>
				<td><%= live.name %></td>
				<td><%= live.gmail %></td>
				<td><%= live.live_school.name if live.live_school %></td>
				<td><%= live.live_department.name %></td>
				<td><%= live.location %></td>
				<td>
					<% if live.ioh_url.present? %>
					<a href="<%= live.ioh_url %>" target="_blank">
						<span class="glyphicon glyphicon-new-window"></span>
					</a>
					<% end %>
				</td>
				<td><%= live.time_count %></td>
				<td>
					<a href="<%= "/admin/live/#{live.id}/edit" %>">
						<span class="glyphicon glyphicon-edit"></span>
					</a>
					<!-- <a href="<%= "/admin/live/#{live.id}" %>" style="color: #a94442" onclick="return confirm('確定要刪除嗎？');" data-method="DELETE">
						<span class="glyphicon glyphicon-trash"></span>
					</a> -->
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
